<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form_electronica" model="ir.ui.view">
        <field name="name">stock.picking.form.electronica</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='note']" position="after">
                <page name="history" string="History">
                    <field name="pick_stage_ids" attrs="{'readonly': 1}">
                        <tree default_order="id desc">
                            <field name="name"/>
                            <field name="state"/>
                            <field name="entry_date"/>
                            <field name="exit_date"/>
                            <field name="total_time"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="transfer_history_view_pivot" model="ir.ui.view">
        <field name="name">stock.picking.history.pivot</field>
        <field name="model">stock.picking.history</field>
        <field name="arch" type="xml">
            <pivot string="Transfer Stage Analysis" disable_linking="True">
                <field name="picking_id" type="row"/>
                <field name="state" type="col"/>
                <field name="total_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="transfer_stage_action_analysis" model="ir.actions.act_window">
        <field name="name">Transfer Stage Analysis</field>
        <field name="res_model">stock.picking.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('transfer_history_view_pivot')})]"/>
        <field name="context">{}</field>  <!-- force empty -->
    </record>

    <menuitem name="Stage Statistics" id="report_picking_stage_analysis" parent="stock.menu_stock_root"
    sequence="99" action="transfer_stage_action_analysis"/>

</odoo>
