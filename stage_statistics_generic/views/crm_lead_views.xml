<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_lead_view_form_electronica" model="ir.ui.view">
        <field name="name">crm.lead.form.electronica</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lead']" position="after">
                <page name="history" string="History">
                    <field name="lead_stage_ids" attrs="{'readonly': 1}">
                        <tree default_order="id desc">
                            <field name="name"/>
                            <field name="person_assign_id"/>
                            <field name="stage_id"/>
                            <field name="entry_date"/>
                            <field name="exit_date"/>
                            <field name="total_time"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="lead_history_view_pivot" model="ir.ui.view">
         <field name="name">lead.history.pivot</field>
         <field name="model">lead.history</field>
         <field name="arch" type="xml">
             <pivot string="Lead Stage Analysis" disable_linking="True">
                 <field name="lead_id" type="row"/>
                 <field name="stage_id" type="col"/>
                 <field name="total_time" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="lead_stage_action_analysis" model="ir.actions.act_window">
        <field name="name">Lead History Analysis</field>
        <field name="res_model">lead.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('lead_history_view_pivot')})]"/>
        <field name="context">{}</field>  <!-- force empty -->
    </record>

    <menuitem name="Stage Statistics" id="report_lead_stage_analysis" parent="crm.crm_menu_root"
    sequence="99" action="lead_stage_action_analysis"/>

</odoo>
