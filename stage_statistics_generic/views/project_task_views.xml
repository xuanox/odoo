<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_task_form2_electronica" model="ir.ui.view">
        <field name="name">project.task.form.electronica</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra_info']" position="after">
                <page name="history" string="History">
                    <field name="task_stage_ids" attrs="{'readonly': 1}">
                        <tree default_order="id desc">
                            <field name="name"/>
                            <field name="person_assign_id"/>
                            <field name="stage_id"/>
                            <field name="entry_date"/>
                            <field name="exit_date"/>
                            <field name="total_time"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="project_task_history_view_pivot" model="ir.ui.view">
        <field name="name">task.history.pivot</field>
        <field name="model">task.history</field>
        <field name="arch" type="xml">
            <pivot string="Project Stage Analysis" disable_linking="True">
                <field name="task_id" type="row"/>
                <field name="stage_id" type="col"/>
                <field name="total_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="project_task_stage_action_analysis" model="ir.actions.act_window">
        <field name="name">Task Stage Analysis</field>
        <field name="res_model">task.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('project_task_history_view_pivot')})]"/>
        <field name="context">{}</field>  <!-- force empty -->
    </record>

    <menuitem name="Stage Statistics" id="report_project_stage_analysis" parent="project.menu_main_pm"
    sequence="99" action="project_task_stage_action_analysis"/>

</odoo>
