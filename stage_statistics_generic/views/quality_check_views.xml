<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="quality_check_view_form_electronica" model="ir.ui.view">
        <field name="name">quality.check.form.electronica</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="history" string="History">
                    <field name="quality_stage_ids" attrs="{'readonly': 1}">
                        <tree default_order="id desc">
                            <field name="name"/>
                            <field name="team_assign_id"/>
                            <field name="quality_state"/>
                            <field name="entry_date"/>
                            <field name="exit_date"/>
                            <field name="total_time"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="quality_history_view_pivot" model="ir.ui.view">
        <field name="name">quality.check.history.pivot</field>
        <field name="model">quality.check.history</field>
        <field name="arch" type="xml">
            <pivot string="Quality Check Stage Analysis" disable_linking="True">
                <field name="quality_id" type="row"/>
                <field name="quality_state" type="col"/>
                <field name="total_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="quality_stage_action_analysis" model="ir.actions.act_window">
        <field name="name">Quality Stage Analysis</field>
        <field name="res_model">quality.check.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('quality_history_view_pivot')})]"/>
        <field name="context">{}</field>  <!-- force empty -->
    </record>

    <menuitem name="Stage Statistics" id="report_quality_stage_analysis" parent="quality_control.menu_quality_root"
    sequence="99" action="quality_stage_action_analysis"/>

</odoo>
