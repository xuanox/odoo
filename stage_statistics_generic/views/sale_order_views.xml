<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_electronica" model="ir.ui.view">
        <field name="name">sale.order.form.electronica</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="after">
                <page name="history" string="History">
                    <field name="so_stage_ids" attrs="{'readonly': 1}">
                        <tree default_order="id desc">
                            <field name="name"/>
                            <field name="person_assign_id"/>
                            <field name="state"/>
                            <field name="entry_date"/>
                            <field name="exit_date"/>
                            <field name="total_time"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="so_history_view_pivot" model="ir.ui.view">
        <field name="name">sale.order.history.pivot</field>
        <field name="model">sale.order.history</field>
        <field name="arch" type="xml">
            <pivot string="Sale Order Stage Analysis" disable_linking="True">
                <field name="so_id" type="row"/>
                <field name="state" type="col"/>
                <field name="total_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="so_stage_action_analysis" model="ir.actions.act_window">
        <field name="name">Sale Stage Analysis</field>
        <field name="res_model">sale.order.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('so_history_view_pivot')})]"/>
        <field name="context">{}</field>  <!-- force empty -->
    </record>

    <menuitem name="Stage Statistics" id="report_so_stage_analysis" parent="sale.sale_menu_root"
    sequence="99" action="so_stage_action_analysis"/>

</odoo>
