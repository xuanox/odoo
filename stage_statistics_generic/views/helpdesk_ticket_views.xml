<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_ticket_view_form_electronica" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.electronica</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="after">
                <notebook colspan="4">
                    <page name="history" string="History">
                        <field name="ticket_stage_ids" attrs="{'readonly': 1}">
                            <tree default_order="id desc">
                                <field name="name"/>
                                <field name="person_assign_id"/>
                                <field name="stage_id"/>
                                <field name="entry_date"/>
                                <field name="exit_date"/>
                                <field name="total_time"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

     <record id="helpdesk_ticket_history_view_pivot" model="ir.ui.view">
         <field name="name">helpdesk.ticket.history.pivot</field>
         <field name="model">helpdesk.ticket.history</field>
         <field name="arch" type="xml">
             <pivot string="Helpdesk Stage Analysis" disable_linking="True">
                 <field name="ticket_id" type="row"/>
                 <field name="stage_id" type="col"/>
                 <field name="total_time" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="helpdesk_stage_action_analysis" model="ir.actions.act_window">
        <field name="name">Helpdesk Ticket History Analysis</field>
        <field name="res_model">helpdesk.ticket.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('helpdesk_ticket_history_view_pivot')})]"/>
        <field name="context">{}</field>  <!-- force empty -->
    </record>

    <menuitem name="Stage Statistics" id="report_helpdesk_ticket_stage_analysis" parent="helpdesk.menu_helpdesk_root"
    sequence="99" action="helpdesk_stage_action_analysis"/>

</odoo>
