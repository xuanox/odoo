<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_close_ticket_wizard" model="ir.ui.view">
            <field name="name">Close Ticket</field>
            <field name="model">technical_support.close.ticket</field>
            <field name="arch" type="xml">
                <form string="Close Ticket" version="7.0">
                  <p>Está Seguro de Cerrar la Orden de Servicio</p><br />
                  <p>Al Cerrar la Orden, no podrá editar la información</p><br />
                  <p>Aseguré de llenar toda la información</p><br />
                  <p>Si no está seguro, cierre la ventana y verifique la información</p><br />
                    <footer>
                        <button name="close_ticket" string="Close Order and Ticket" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_close_ticket" model="ir.actions.act_window">
            <field name="name">Close Ticket</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">technical_support.close.ticket</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
