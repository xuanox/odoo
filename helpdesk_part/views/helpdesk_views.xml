<?xml version="1.0" encoding="utf-8"?>
<odoo>
    	<record id="helpdesk_ticket_part_form_view_inherited" model="ir.ui.view">
        <field name="name">Helpdesk Ticket</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
          <xpath expr="//button[@name='open_customer_tickets']" position="before">
            <button class="oe_stat_button" name="action_view_part_request" type="object" icon="fa-file-excel-o">
              <field string="Part Requests" name="part_count" widget="statinfo"/>
            </button>
            <button class="oe_stat_button" name="action_view_part_line_request" type="object" icon="fa-cogs">
              <field string="Part List" name="part_line_count" widget="statinfo"/>
            </button>
          </xpath>
          <xpath expr="//button[@name='assign_ticket_to_self']" position="after">
            <button name="%(action_spare_part_request)d" string="SP Request" type="action" class="oe_highlight" attrs="{'invisible':  [('user_id', '=', False)]}" groups="technical_support.group_technical_support_engineer" context="{'default_partner_id': partner_id}"/>
          </xpath>
          <xpath expr="//field[@name='description']" position="after">
            <notebook>
              <page name="spr" string="SPR">
                <group>
                  <field name="part_ids" nolabel="1">
                    <tree string="SPR">
                      <field name="name"/>
                      <field name="state"/>
                    </tree>
                  </field>
                </group>
              </page>
            </notebook>
          </xpath>
        </field>
      </record>
</odoo>
