<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <record model="ir.module.category" id="module_category_continuing_education">
        <field name="name">Continuing Education</field>
        <field name="description">Helps you handle your Continuing Education needs</field>
        <field name="sequence">5</field>
      </record>

      <record id="group_continuing_education_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="continuing_education.module_category_continuing_education"/>
      </record>

      <record id="group_continuing_education_manager" model="res.groups">
          <field name="name">Manager</field>
          <field name="category_id" ref="continuing_education.module_category_continuing_education"/>
          <field name="implied_ids" eval="[(4, ref('group_continuing_education_user'))]"/>
          </record>

</odoo>
