<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <record model="ir.module.category" id="module_category_messenger_service">
        <field name="name">Messenger Service</field>
        <field name="description">Helps you handle your Messenger Service needs</field>
        <field name="sequence">5</field>
      </record>

      <record id="group_messenger_service_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="messenger_service.module_category_messenger_service"/>
      </record>

      <record id="group_messenger_service_manager" model="res.groups">
          <field name="name">Manager</field>
          <field name="category_id" ref="messenger_service.module_category_messenger_service"/>
          <field name="implied_ids" eval="[(4, ref('group_messenger_service_user'))]"/>
          </record>

</odoo>
