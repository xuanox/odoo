<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_homologation_wizard" model="ir.ui.view">
            <field name="name">Homologation</field>
            <field name="model">regulatory.technical.file.homologation.assigned</field>
            <field name="arch" type="xml">
                <form string="Pending Ticket" version="7.0">
                    <group>
                        <field name="date_planned"/>
                        <field name="location_homologation"/>
                        <field name="entity"/>

                    </group>
                    <footer>
                        <button name="homologation_assigned" string="Cita Asignada" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_homologation_assigned" model="ir.actions.act_window">
            <field name="name">Homologation Assigned</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">regulatory.technical.file.homologation.assigned</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
