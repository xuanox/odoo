<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
      <!-- stages : views -->
      <record id="regulatory_technical_file_creation_stage_view_search" model="ir.ui.view">
          <field name="name">regulatory.technical.file.creation.stage.view.search</field>
          <field name="model">regulatory.technical.file.creation.stage</field>
          <field name="arch" type="xml">
              <search string="Technical File Creation Stage">
                 <field name="name" string="Technical File Creation Stage"/>
              </search>
          </field>
      </record>

      <record id="regulatory_technical_file_creation_stage_view_tree" model="ir.ui.view">
          <field name="name">regulatory.technical.file.creation.stage.view.tree</field>
          <field name="model">regulatory.technical.file.creation.stage</field>
          <field name="arch" type="xml">
              <tree string="Technical File Creation Stage" editable="top">
                  <field name="sequence" widget="handle"/>
                  <field name="name"/>
                  <field name="fold"/>
                  <field name="done"/>
              </tree>
          </field>
      </record>

      <record id="regulatory_technical_file_creation_stage_view_kanban" model="ir.ui.view">
          <field name="name">regulatory.technical.file.creation.stage.view.kanban</field>
          <field name="model">regulatory.technical.file.creation.stage</field>
          <field name="arch" type="xml">
              <kanban class="o_kanban_mobile">
                  <templates>
                      <t t-name="kanban-box">
                          <div t-attf-class="oe_kanban_global_click">
                              <div>
                                  <strong><field name="name"/></strong>
                              </div>
                          </div>
                      </t>
                  </templates>
              </kanban>
          </field>
      </record>

      <!-- stages : actions -->
      <record id="regulatory_technical_file_creation_stage_action" model="ir.actions.act_window">
          <field name="name">Technical File Creation Stages</field>
          <field name="res_model">regulatory.technical.file.creation.stage</field>
          <field name="view_mode">tree,kanban,form</field>
          <field name="view_type">form</field>
          <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Add a new stage in the Technical File Creation
            </p>
          </field>
      </record>

<!-- Technical File Creation -->
      <record id="regulatory_technical_file_creation_view_form" model="ir.ui.view">
            <field name="name">regulatory.technical.file.creation.view.form</field>
            <field name="model">regulatory.technical.file.creation</field>
            <field name="arch" type="xml">
              <form string="Technical File Creation">
                <header>
                  <button name="%(action_creation_assign)d" string="Assign Responsible" states="draft" type="action" class="oe_highlight" groups="regulatory_issue.group_regulatory_issue_manager" />
                  <button name="action_process" states="assigned" string="Revisión" type="object" class="oe_highlight"/>
                  <button name="%(action_homologation_assigned)d" string="Cita de Homologación" states="process" type="action" class="oe_highlight" groups="regulatory_issue.group_regulatory_issue_manager" />
                  <button name="action_done" states="homologation" string="Completar" type="object" class="oe_highlight"/>
                  <field name="state" widget="statusbar"/>
                </header>
                  <sheet>
                      <div class="oe_title">
                          <label for="name" class="oe_edit_only" string="#Request:"/>
                          <h1>
                              <field name="name" placeholder="Proposed Name for the File"/>
                          </h1>
                  </div>
                  <group>
                      <group>
                          <field name="technical_file_name" attrs="{'invisible':[('technical_file_name', '=', False)]}"/>
                          <field name="models_id" widget="many2one"/>
                          <field name="brand_id" widget="many2one"/>
                          <field name="priority" widget="priority"/>
                      </group>
                      <group>
                        <field name="user_id" widget="many2one"/>
                        <field name="responsible_sales_id" widget="many2one"/>
                        <field name="sales_team_id" widget="many2one"/>
                        <field name="responsible_team_lider_id" widget="many2one"/>
                      </group>
                  </group>
                  <group>
                    <field name='observation' placeholder="Observation ......."/>
                  </group>
              <notebook>
                  <page name="info" string="Info">
                      <group>
                        <field name='entity_id'/>
                        <field name='location_homologation'/>
                      </group>
                  </page>
              </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
              </form>
            </field>
        </record>

      <record id="regulatory_technical_file_creation_view_tree" model="ir.ui.view">
            <field name="name">regulatory.technical.file.creation.view.tree</field>
            <field name="model">regulatory.technical.file.creation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="brand_id" widget="many2one"/>
                    <field name="models_id" widget="many2one"/>
                    <field name="sales_team_id" widget="many2one"/>
                    <field name="user_id" widget="many2one"/>
                    <field name="responsible_sales_id" widget="many2one"/>
                    <field name="priority" widget="priority"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

      <record id="regulatory_technical_file_creation_view_graph" model="ir.ui.view">
            <field name="name">regulatory.technical.file.creation.view.graph</field>
            <field name="model">regulatory.technical.file.creation</field>
            <field name="arch" type="xml">
                <graph string="Technical File Creation"  type="pie">
                    <field name="brand_id" type="col"/>
                    <field name="responsible_sales_id" type="col"/>
                    <field name="user_id" type="row"/>
                </graph>
            </field>
        </record>

      <record id="regulatory_technical_file_creation_view_pivot" model="ir.ui.view">
            <field name="name">regulatory.technical.file.creation.view.pivot</field>
            <field name="model">regulatory.technical.file.creation</field>
            <field name="arch" type="xml">
                <pivot string="Technical File Creation" disable_linking="True">
                    <field name="brand_id" type="row"/>
                    <field name="responsible_sales_id" type="col"/>
                    <field name="user_id" type="col"/>
                </pivot>
            </field>
        </record>

      <record id="regulatory_technical_file_creation_view_dashboard" model="ir.ui.view">
            <field name="name">regulatory.technical.file.creation.view.dashboard</field>
            <field name="model">regulatory.technical.file.creation</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <dashboard>
                    <view type="graph" ref="regulatory_issue.regulatory_technical_file_creation_view_graph"/>
                    <view type="pivot" ref="regulatory_issue.regulatory_technical_file_creation_view_pivot"/>
                </dashboard>
            </field>
        </record>

      <!-- Technical File Creation : actions -->
      <record id="regulatory_technical_file_creation_action" model="ir.actions.act_window">
            <field name="name">Technical File Creation</field>
            <field name="res_model">regulatory.technical.file.creation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph,dashboard</field>
        </record>

    </data>
</odoo>
