<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
    <!-- Technical Support Order - Caendar View -->
    <record id="technical_support_order_calendar_view" model="ir.ui.view">
      <field name="name">Technical Support Order - Calendar</field>
      <field name="model">technical_support.order</field>
      <field name="arch" type="xml">
        <calendar color="maintenance_type" date_start="date_scheduled" string="Technical Support Orders">
          <field name="name"/>
          <field name="description"/>
        </calendar>
      </field>
    </record>

		<!-- Technical Support Order - Actions -->
		<record id="action_calendar_view_orders" model="ir.actions.act_window">
            <field name="name">Technical Support Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">technical_support.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,form</field>
            <field name="context" eval="{'default_categ_id': ref('technical_support.product_category_technical_support')}"/>
    </record>

    <!-- Technical Support Menu -->
		<menuitem name="Orders"
			id="menu_technical_support_maintenance"
			parent="base.menu_technical_support_root"
			sequence="1"/>

    <!-- Technical Support Orders Menu -->
		<menuitem name="Technical Support Calendar"
			action="action_calendar_view_orders"
			id="menu_technical_support_calendar_order"
			parent="menu_technical_support_maintenance"
			sequence="11"/>

 	</data>
</odoo>
