<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_tsr_reasign_wizard" model="ir.ui.view">
            <field name="name">Reasign TSR</field>
            <field name="model">technical_support.request.reasign</field>
            <field name="arch" type="xml">
                <form string="Reasign TSR" version="7.0">
                    <group>
                        <field name="user_id"/>
                    </group>
                    <footer>
                        <button name="reasign_tsr" string="Reasign TSR" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_tsr_reasign" model="ir.actions.act_window">
            <field name="name">Reasign TSR</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">technical_support.request.reasign</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
